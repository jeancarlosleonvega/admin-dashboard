{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "prisma": {
    "schema": "src/infrastructure/database/prisma/schema.prisma"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
