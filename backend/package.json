    "@prisma/client": "^5.10.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "fastify": "^4.26.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
